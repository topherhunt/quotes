.centered-600
  %h2 Sign up

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .row.row-padded
      .col-xs-3= f.label :email
      .col-xs-9= f.email_field :email, autofocus: true, class: 'form-control'
    .row.row-padded
      .col-xs-3= f.label :password
      .col-xs-9= f.password_field :password, autocomplete: "off", class: 'form-control'
    .row.row-padded
      .col-xs-3= f.label :password_confirmation, "Confirm password"
      .col-xs-9= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
    .row.row-padded
      .col-xs-3
      .col-xs-9= f.submit "Sign up", class: 'btn btn-primary'

  = render "devise/shared/links"
