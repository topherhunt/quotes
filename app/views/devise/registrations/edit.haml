.centered-600
  %h2 Account settings

  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    .row.row-padded
      .col-xs-3= f.label :email
      .col-xs-9= f.email_field :email, autofocus: true, class: "form-control"
    .row.row-padded
      .col-xs-3
        =f.label :password
        %span.small (leave blank to keep the same)
      .col-xs-9= f.password_field :password, autocomplete: "off", class: "form-control"
    .row.row-padded
      .col-xs-3= f.label :password_confirmation
      .col-xs-9= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
    .row.row-padded
      .col-xs-3
        = f.label :current_password
        %span.small.text-danger (required)
      .col-xs-9= f.password_field :current_password, autocomplete: "off", class: "form-control"
    .row.row-padded
      .col-xs-3
      .col-xs-9= f.submit "Update", class: "btn btn-primary"

  %hr

  %p
    Unhappy?
    = link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "text-danger"
